<%- include('partials/header', { title: 'Home' }) %>

<style>
  /* Ensure html and body take full height */
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  /* Full-Screen Background on Body and Overlay */
  body {
    background-image: url('/uploads/home.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: white;
  }

  /* Overlay for Darkening Background */
  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1;
  }
  
  /* Center Content */
  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
  }
  
  /* Typing Animation for Heading with Slower Speed */
  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }
  .typing-effect {
    font-size: 2.5rem;
    white-space: nowrap;
    overflow: hidden;
    border-right: 3px solid white;
    width: 0;
    animation: typing 5s steps(40, end) forwards, blink 0.75s step-end infinite;
  }
  @keyframes blink {
    50% { border-color: transparent; }
  }

  /* Button Hover Effects with Gradient */
  .btn-primary {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    border: none;
    transition: background 0.3s ease, transform 0.3s ease;
  }
  .btn-primary:hover {
    background: linear-gradient(45deg, #0056b3, #00aaff);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  .btn-outline-light:hover {
    color: #ffffff;
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 16px rgba(255, 255, 255, 0.2);
  }

  /* Floating Elements for Ambient Effect */
  .floating-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.5;
    animation: float 6s ease-in-out infinite alternate;
  }
  .floating-shape:nth-child(1) { background: #ffdd57; width: 60px; height: 60px; top: 20%; left: 10%; animation-delay: 1s; }
  .floating-shape:nth-child(2) { background: #ff6b6b; width: 80px; height: 80px; top: 50%; left: 80%; animation-delay: 2s; }
  .floating-shape:nth-child(3) { background: #4ecdc4; width: 40px; height: 40px; top: 70%; left: 30%; animation-delay: 3s; }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    100% { transform: translateY(15px); }
  }
</style>

<!-- Overlay Layer -->
<div class="overlay"></div>

<!-- Hero Content with Typing Animation and Fade-ins -->
<div class="hero-content fade-in">
  <!-- Typing animation on heading -->
  <h1 class="typing-effect">Welcome to Peer Assessment Hub</h1>
  <p class="lead text-light" style="max-width: 600px;">
    Empowering students and instructors to engage, learn, and grow through constructive feedback and collaborative evaluation.
  </p>
  <div class="mt-4">
    <a href="/register" class="btn btn-primary btn-lg mx-2">Register</a>
    <a href="/login" class="btn btn-outline-light btn-lg mx-2">Log In</a>
  </div>
</div>

<!-- Floating Shapes for Ambient Effect -->
<div class="floating-shape"></div>
<div class="floating-shape"></div>
<div class="floating-shape"></div>

<%- include('partials/footer') %>
