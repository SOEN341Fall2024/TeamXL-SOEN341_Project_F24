<%- include('partials/instructor-header', { title: 'Instructor team view', headerTitle: 'Instructor team view', userType, instructorUsername }) %>

  <style>
    body {
      background-color: #f8f9fa;
    }
    .table-container {
      background-color: #d1def4;
      border-radius: 12px;
      padding: 20px;
      
      margin-bottom: 20px;
    }
    .table thead th {
      background-color: #6b98e6;
      font-weight: 600;
      border-top: none;
      border-bottom: none;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .caption-style {
      font-size: 1.5rem;
      font-weight: bold;
      color: #000000;
    }
  </style>
</head>
<body>

<div class="container py-5">
  <!-- Page Title -->
  <div class="text-center mb-5">
    <h1 class="display-5 fw-bold text-dark">
       Teams Overview 
    </h1>
    <p class="text-muted fs-5">Detailed information on team members across all groups, including student names and IDs.</p>
  </div>

  <!-- Team Cards -->
  <% for(var i = 0; i < Teams.rows.length; i++) { %>
    <% if(i == 0 || Teams.rows[i].group_name != Teams.rows[i - 1].group_name) { %>
      <div class="table-container">
        <h2 class="caption-style mb-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-people-fill m-2" viewBox="0 0 16 16">
            <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
          </svg><%= Teams.rows[i].group_name %>
        </h2>
        <table class="table  table-striped table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">Student Name</th>
              <th scope="col">Student ID</th>
            </tr>
          </thead>
          <tbody>
    <% } %>
            <tr>
              <td><%= Teams.rows[i].name %></td>
              <td><%= Teams.rows[i].id %></td>
            </tr>
    <% if(i + 1 == Teams.rows.length || Teams.rows[i].group_name != Teams.rows[i + 1].group_name) { %>
          </tbody>
        </table>
      </div>
    <% } %>
  <% } %>
</div>

<%- include('partials/footer') %>
