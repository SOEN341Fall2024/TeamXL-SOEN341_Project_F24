<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peer Assessment Completion Status</title>
    <!-- Bootstrap CSS for styling -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>

    <!-- Title Banner -->
    <header class="bg-dark text-white text-center py-3 mb-4">
        <h1>Peer Assessment Completion Status</h1>
    </header>

    <div class="container mt-5">
        <% var isNewGroup = true; for (var i = 0, j = 0; i < student_info.length; i++) { %>
            <% if (isNewGroup) { isNewGroup = false; %>
                <div class="card mb-4">
                    <div class="card-body">
                        <% 
                            // Ensure the group exists and handle empty group names
                            var groupName = (groups[j] && groups[j].group_name && groups[j].group_name.trim() !== "") 
                                ? groups[j].group_name 
                                : 'Unplaced Students';
                        %>
                        <h3 class="card-title"><%= groupName %></h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Student Name</th>
                                    <th>Reviews Completed</th>
                                </tr>
                            </thead>
                            <tbody>
            <% } %>
            <% if (i > 0 && student_info[i].id == student_info[i - 1].id) { continue; } %>
            <% if (groups[j] && groups[j].id_group != student_info[i].id_group) { j++; i--; isNewGroup = true; %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% continue; } %>
            <tr>
                <td><%= student_info[i].id %></td>
                <td><%= student_info[i].name %></td>
                <td>
                    <% 
                        var reviewsCompleted = getNumberOfReviews(student_info, i);
                        var totalReviews = getNumberOfTeammates(student_info, sorted_students, i) - 1; // Subtract 1 from total reviews
                        var completionPercentage = totalReviews > 0 
                            ? (reviewsCompleted / totalReviews) * 100
                            : 0;

                        // Ensure the values are non-negative
                        totalReviews = Math.max(0, totalReviews);

                        // Determine progress bar color
                        var progressBarClass = "bg-danger"; // Default to red
                        if (completionPercentage >= 75) {
                            progressBarClass = "bg-success"; // Green
                        } else if (completionPercentage >= 50) {
                            progressBarClass = "bg-warning"; // Orange
                        }

                        // Display "Complete" or fraction
                        var displayText = completionPercentage === 100 
                            ? "Complete" 
                            : `${reviewsCompleted} / ${totalReviews}`;
                    %>
                    <!-- Progress bar with "Complete" or fraction inside -->
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar <%= progressBarClass %>" role="progressbar" style="width: <%= completionPercentage %>%;" aria-valuenow="<%= completionPercentage %>" aria-valuemin="0" aria-valuemax="100">
                            <%= displayText %>
                        </div>
                    </div>
                </td>
            </tr>
        <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
