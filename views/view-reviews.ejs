<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Reviews</title>
    <!-- Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for star icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Black Gradient background for the title banner */
        .title-banner {
            background: linear-gradient(135deg, #222529, #222529);
            color: white; 
            padding: 30px;
            margin-bottom: 40px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Main container styling */ 
        .container {
            margin-top: 50px;
            max-width: 700px;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        /* Criterion box styling */
        .criterion-box {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .criterion-box h4 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #222529;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        /* Star rating styling to match "Student Evaluation" */
        .rating {
            display: flex;
            justify-content: center;
            max-width: 300px;
            margin: 0 auto;
            flex-direction: row-reverse;
        }
        .rating .fa-star {
            font-size: 1rem;
            color: lightgray;
            margin: 0 2px;
            transition: color 0.3s ease;
        }
        .rating .fa-star.filled {
            color: gold;
        }

        /* Additional Comments Styling */
        .form-section {
            margin-bottom: 50px; /* Adds extra space below the comments box */
        }
    </style>
</head>
<body>

    <!-- Title Banner -->
    <header class="title-banner">
        <h1>View Reviews</h1>
    </header>
    
    <!-- Evaluation Form Container -->
    <div class="container">
        
        <!-- Cooperation Criterion Box -->
        <div class="criterion-box">
            <h4>Cooperation</h4>
            <div class="rating" id="cooperation-rating"></div>
        </div>

        <!-- Conceptual Contribution Criterion Box -->
        <div class="criterion-box">
            <h4>Conceptual Contribution</h4>
            <div class="rating" id="conceptual-rating"></div>
        </div>

        <!-- Practical Contribution Criterion Box -->
        <div class="criterion-box">
            <h4>Practical Contribution</h4>
            <div class="rating" id="practical-rating"></div>
        </div>

        <!-- Work Ethic Criterion Box -->
        <div class="criterion-box">
            <h4>Work Ethic</h4>
            <div class="rating" id="ethic-rating"></div>
        </div>

        <!-- Additional Comments (Optional) -->
        <div class="form-section text-center mb-5">
            <label for="comments" class="form-label">Overall Comments </label>
            <p class="form-control-static">No comments yet.</p>
        </div>
    </div>

    <!-- Font Awesome for star icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" crossorigin="anonymous"></script>

    <!-- JavaScript to Generate Stars -->
    <script>
        // Mock data for ratings
        const ratings = {
            cooperation: 3,
            conceptual: 3,
            practical: 3,
            ethic: 3
        };

        // Function to generate static stars based on rating
        function generateStars(rating, elementId) {
            const ratingElement = document.getElementById(elementId);
            ratingElement.innerHTML = ''; // Clear any existing stars
            for (let i = 5; i >= 1; i--) { // Reverse order for right alignment
                const star = document.createElement('i');
                star.className = 'fa fa-star' + (i <= rating ? ' filled' : '');
                ratingElement.appendChild(star);
            }
        }

        // Generate stars for each criterion
        generateStars(ratings.cooperation, 'cooperation-rating');
        generateStars(ratings.conceptual, 'conceptual-rating');
        generateStars(ratings.practical, 'practical-rating');
        generateStars(ratings.ethic, 'ethic-rating');
    </script>
</body>
</html>
