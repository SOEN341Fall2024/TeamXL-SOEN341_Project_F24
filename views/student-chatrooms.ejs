<!DOCTYPE html>
<html>
<head>
    <title>Chatroom</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Bootstrap Icons (optional) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* General page styling for full screen */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .chat-container {
            display: flex;
            height: 100vh;
            width: 100vw;
            background-color: white;
            overflow: hidden;
        }
        .user-list {
            width: 250px;
            background-color: #f0f0f0;
            border-right: 1px solid #ddd;
            overflow-y: auto;
            padding: 15px;
        }
        .user {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .user-icon {
            font-size: 1.5rem;
            margin-right: 10px;
        }
        .user-status {
            height: 10px;
            width: 10px;
            border-radius: 50%;
            margin-left: auto;
        }
        .online {
            background-color: #28a745;
        }
        .offline {
            background-color: #6c757d;
        }
        .chat-section {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .chat-header {
            background-color: #007bff;
            color: white;
            padding: 20px;
            text-align: center;
        }
        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background-color: #f8f9fa;
        }
        .chat-bubble {
            display: inline-block; /* Shrinks the bubble width to the content size */
            max-width: 70%; /* Limits the width to 70% of the chat section */
            padding: 10px 15px;
            border-radius: 20px;
            margin-bottom: 15px;
            font-size: 16px;
            color: #333;
            word-wrap: break-word; /* Breaks long words */
        }
        .chat-bubble.user {
            background-color: #e1f5fe;
            align-self: flex-end;
            border-radius: 20px 20px 0 20px;
        }
        .chat-bubble.other {
            background-color: #ffffff;
            border: 1px solid #ddd;
            align-self: flex-start; /* Aligns the "other" user's bubble to the left */
            border-radius: 20px 20px 20px 0; /* Rounded corners */
        }
        .chat-input {
            display: flex;
            padding: 15px;
            border-top: 1px solid #ddd;
            background-color: #f0f0f0;
        }
        .chat-input input {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 30px;
            outline: none;
        }
        .chat-input button {
            margin-left: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            transition: background-color 0.3s;
        }
        .chat-input button:hover {
            background-color: #0056b3;
        }
    </style>    
</head>
<body>
    <div class="chat-container">
        <!-- Sidebar with User List -->
        <div class="user-list" id="userList">
            <h5>Users</h5>
            <div class="user" data-status="online">
                <i class="bi bi-person-circle user-icon"></i>
                <span>Kevin</span>
                <span class="user-status online"></span>
            </div>
            <div class="user" data-status="offline">
                <i class="bi bi-person-circle user-icon"></i>
                <span>Aditi</span>
                <span class="user-status offline"></span>
            </div>
            <div class="user" data-status="online">
                <i class="bi bi-person-circle user-icon"></i>
                <span>Jonathan</span>
                <span class="user-status online"></span>
            </div>
            <!-- Add more users as needed -->
        </div>

        <!-- Chat Section -->
        <div class="chat-section">
            <!-- Header -->
            <div class="chat-header">
                <h1 class="h4">Chatroom</h1>
            </div>
            <!-- Chat Messages -->
            <div class="chat-messages d-flex flex-column">
                <div class="chat-bubble other">
                    <strong>Aditi:</strong> Hello everyone!
                </div>
                <div class="chat-bubble user">
                    <strong>You:</strong> Hi there!
                </div>
            </div>
            <!-- Input Area -->
            <div class="chat-input">
                <input type="text" placeholder="Type a message...">
                <button>Send</button>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // JavaScript to sort users by online status
        window.onload = function() {
            const userList = document.getElementById('userList');
            const users = Array.from(userList.getElementsByClassName('user'));

            // Sort users: online first, then offline
            users.sort((a, b) => {
                const statusA = a.getAttribute('data-status') === 'online' ? 1 : 0;
                const statusB = b.getAttribute('data-status') === 'online' ? 1 : 0;
                return statusB - statusA;
            });

            // Append sorted users back to the user list
            users.forEach(user => userList.appendChild(user));
        };
    </script>
</body>
</html>
