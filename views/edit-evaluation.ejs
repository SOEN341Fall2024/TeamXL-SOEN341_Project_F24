<%- include('partials/header-2', { title: 'Evaluate Student' , userType, instructorUsername, cooperationValue, conceptualContributionValue, practical_contributionValue, work_ethicValue  }) %>
    <style>
        /* Black Gradient background for the title banner */
        .title-banner {
            background: linear-gradient(135deg, #222529, #222529);
            color: white; 
            padding: 30px;
            margin-bottom: 40px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Main container styling */ 
        .container {
            margin-top: 50px;
            max-width: 700px;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        /* Criterion box styling */
        .criterion-box {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .criterion-box h4 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #222529;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }

        /* Rating system */
        .rating {
            display: flex;
            justify-content: center;
            max-width: 300px;
            margin: 0 auto;
            flex-direction: row-reverse;
        }
        .rating label { 
            cursor: pointer;
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }
        .rating input {
            display: none;
        }
        .rating label::before {
            content: "â˜…";
            color: lightgray;
            transition: color 0.3s ease;
        }
        .rating label:hover::before,
        .rating label:hover ~ label::before,
        .rating input:checked ~ label::before {
            color: gold;
        }

        /* Additional Comments Styling */
        .form-section {
            margin-bottom: 50px; /* Adds extra space below the comments box */
        }

        /* Warning message styling */
        .warning {
            color: red;
            font-size: 0.9rem;
            display: none;
            margin-top: 5px;
        }
    </style>
    <script>
        function validateForm(event) {
            var cooperation = document.querySelector('input[name="cooperation"]:checked');
            var conceptualContribution = document.querySelector('input[name="conceptual_contribution"]:checked');
            var practicalContribution = document.querySelector('input[name="practical_contribution"]:checked');
            var workEthic = document.querySelector('input[name="work_ethic"]:checked');

            document.getElementById("coop-warning").style.display = "none";
            document.getElementById("concept-warning").style.display = "none";
            document.getElementById("practical-warning").style.display = "none";
            document.getElementById("ethic-warning").style.display = "none";

            var valid = true;

            if (!cooperation) {
                document.getElementById("coop-warning").style.display = "block";
                valid = false;
            }
            if (!conceptualContribution) {
                document.getElementById("concept-warning").style.display = "block";
                valid = false;
            }
            if (!practicalContribution) {
                document.getElementById("practical-warning").style.display = "block";
                valid = false;
            }
            if (!workEthic) {
                document.getElementById("ethic-warning").style.display = "block";
                valid = false;
            }

            if (!valid) {
                event.preventDefault();
            }
        }
    </script>
</head>
<body>

    <!-- Main Content -->
    <div class="container">
        
        <!-- Evaluation Form -->
       <form action="/submit-evaluation" method="POST" onsubmit="validateForm(event)">
        <p>Edit your evaluation</p>
            <!-- Cooperation Criterion Box -->
            <div class="criterion-box">
                <h4>Cooperation</h4>
                <div class="rating">
                    <input type="radio" id="coop-5" name="cooperation" value="5" <%= cooperationValue == 5 ? 'checked' : '' %>>
                    <label for="coop-5"></label>
                    <input type="radio" id="coop-4" name="cooperation" value="4" <%= cooperationValue == 5 ? 'checked' : '' %>>
                    <label for="coop-4"></label>
                    <input type="radio" id="coop-3" name="cooperation" value="3" <%= cooperationValue == 5 ? 'checked' : '' %>>
                    <label for="coop-3"></label>
                    <input type="radio" id="coop-2" name="cooperation" value="2" <%= cooperationValue == 5 ? 'checked' : '' %>>
                    <label for="coop-2"></label>
                    <input type="radio" id="coop-1" name="cooperation" value="1" <%= cooperationValue == 5 ? 'checked' : '' %>>
                    <label for="coop-1"></label>
                </div>
                <p id="coop-warning" class="warning">Please select a rating for Cooperation.</p>
            </div>

            <!-- Conceptual Contribution Criterion Box -->
            <div class="criterion-box">
                <h4>Conceptual Contribution</h4>
                <div class="rating">
                    <input type="radio" id="concept-5" name="conceptual_contribution" value="5" <%= conceptualContributionValue == 5 ? 'checked' : '' %>>
                    <label for="concept-5"></label>
                    <input type="radio" id="concept-4" name="conceptual_contribution" value="4" <%= conceptualContributionValue == 4 ? 'checked' : '' %>>
                    <label for="concept-4"></label>
                    <input type="radio" id="concept-3" name="conceptual_contribution" value="3" <%= conceptualContributionValue == 3 ? 'checked' : '' %>>
                    <label for="concept-3"></label>
                    <input type="radio" id="concept-2" name="conceptual_contribution" value="2" <%= conceptualContributionValue == 2 ? 'checked' : '' %>>
                    <label for="concept-2"></label>
                    <input type="radio" id="concept-1" name="conceptual_contribution" value="1" <%= conceptualContributionValue == 1 ? 'checked' : '' %>>
                    <label for="concept-1"></label>
                </div>
                <p id="concept-warning" class="warning">Please select a rating for Conceptual Contribution.</p>
            </div>
            

            <!-- Practical Contribution Criterion Box -->
            <div class="criterion-box">
                <h4>Practical Contribution</h4>
                <div class="rating">
                    <input type="radio" id="practical-5" name="practical_contribution" value="5" <%= practical_contributionValue == 5 ? 'checked' : '' %>>
                    <label for="practical-5"></label>
                    <input type="radio" id="practical-4" name="practical_contribution" value="4" <%= practical_contributionValue == 5 ? 'checked' : '' %>>
                    <label for="practical-4"></label>
                    <input type="radio" id="practical-3" name="practical_contribution" value="3" <%= practical_contributionValue == 5 ? 'checked' : '' %>>
                    <label for="practical-3"></label>
                    <input type="radio" id="practical-2" name="practical_contribution" value="2" <%= practical_contributionValue == 5 ? 'checked' : '' %>>
                    <label for="practical-2"></label>
                    <input type="radio" id="practical-1" name="practical_contribution" value="1" <%= practical_contributionValue == 5 ? 'checked' : '' %>>
                    <label for="practical-1"></label>
                </div>
                <p id="practical-warning" class="warning">Please select a rating for Practical Contribution.</p>
            </div>

            <!-- Work Ethic Criterion Box -->
            <div class="criterion-box">
                <h4>Work Ethic</h4>
                <div class="rating">
                    <input type="radio" id="ethic-5" name="work_ethic" value="5" <%= work_ethicValue == 5 ? 'checked' : '' %>>
                    <label for="ethic-5"></label>
                    <input type="radio" id="ethic-4" name="work_ethic" value="4" <%= work_ethicValue == 5 ? 'checked' : '' %>>
                    <label for="ethic-4"></label>
                    <input type="radio" id="ethic-3" name="work_ethic" value="3" <%= work_ethicValue == 5 ? 'checked' : '' %>>
                    <label for="ethic-3"></label>
                    <input type="radio" id="ethic-2" name="work_ethic" value="2" <%= work_ethicValue == 5 ? 'checked' : '' %>>
                    <label for="ethic-2"></label>
                    <input type="radio" id="ethic-1" name="work_ethic" value="1" <%= work_ethicValue == 5 ? 'checked' : '' %>>
                    <label for="ethic-1"></label>
                </div>
                <p id="ethic-warning" class="warning">Please select a rating for Work Ethic.</p>
            </div>

            <!-- Additional Comments (Optional) -->
            <div class="form-section text-center mb-5">
                <label for="comments" class="form-label">Overall Comments </label>
                <textarea class="form-control" id="comments" name="comments" rows="4" placeholder="Write any feedback here..."></textarea>
            </div>

            <!-- Submit Button --> 
            <div class="text-center mb-5">
                <button type="submit" class="btn btn-primary">Submit Evaluation</button>
            </div>
        </form>
    </div>

