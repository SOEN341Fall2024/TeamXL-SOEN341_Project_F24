<%- include('partials/instructor-header', { title: 'Instructor access assessments', headerTitle: 'Instructor access assessments', userType, instructorUsername }) %>

<style>
  body {
    background-color: #f8f9fa;
    font-family: 'Roboto', sans-serif;
  }

  .page-title {
    border-bottom: 2px solid #ddd;
    padding-bottom: 15px;
    margin-bottom: 30px;
  }

  .card {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .card-img-top {
    border-bottom: 3px solid #eee;
  }

  .card-title {
    font-weight: bold;
    font-size: 1.25rem;
    color: #333;
  }

  .card-text {
    font-size: 1rem;
    color: #555;
  }

  .btn {
    font-size: 1rem;
    padding: 10px 20px;
  }

  .btn-outline-success {
    color: #198754;
    border-color: #198754;
    transition: all 0.3s ease;
  }

  .btn-outline-success:hover {
    background-color: #198754;
    color: white;
  }

  .btn-success {
    background-color: #198754;
    border-color: #198754;
    transition: all 0.3s ease;
  }

  .btn-success:hover {
    background-color: #146c43;
    border-color: #146c43;
  }
</style>
</head>
<body>

<div class="container py-5">
  <!-- Page Title -->
  <div class="text-center mb-5 page-title">
    <h1 class="display-5 fw-bold text-dark">
      <i class="bi bi-journal-text me-2"></i> Peer Assessments
    </h1>
    <p class="text-muted fs-5">Instructors can access various views of student assessments to monitor and analyze team and individual performance.</p>
  </div>

  <!-- Cards Section -->
  <div class="row g-4">
    <!-- Reviews Summary Card -->
    <div class="col-lg-4 col-md-6">
      <div class="card">
        <img src="/images/summary.jpg" class="card-img-top" alt="Summary">
        <div class="card-body text-center">
          <h5 class="card-title">Reviews Summary</h5>
          <p class="card-text">View a summarized report of student reviews, showing average scores across different criteria for each team member.</p>
          <button type="button" class="btn btn-outline-success" onclick="location.href='/view-reviews-summary?instructorUsername=<%= instructorUsername %>'">
            View Summary
          </button>
        </div>
      </div>
    </div>

    <!-- Detailed Reviews Card -->
    <div class="col-lg-4 col-md-6">
      <div class="card">
        <img src="/images/detailed.jpg" class="card-img-top" alt="Detailed Reviews">
        <div class="card-body text-center">
          <h5 class="card-title">Detailed Reviews</h5>
          <p class="card-text">Explore detailed feedback and scores provided for each student by their peers, with breakdowns by evaluation criteria.</p>
          <button type="button" class="btn btn-outline-success" onclick="location.href='/view-reviews-detailed?instructorUsername=<%= instructorUsername %>'">
            View Details
          </button>
        </div>
      </div>
    </div>

    <!-- Review Completion Card -->
    <div class="col-lg-4 col-md-6">
      <div class="card">
        <img src="/images/completion.jpg" class="card-img-top" alt="Review Completion">
        <div class="card-body text-center">
          <h5 class="card-title">Reviews Completion</h5>
          <p class="card-text">Check the completion status of all peer assessments to ensure every student has been reviewed by their teammates.</p>
          <button type="button" class="btn btn-success" onclick="location.href='/view-review-completion?instructorUsername=<%= instructorUsername %>'">
            View Completion
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('partials/footer') %>