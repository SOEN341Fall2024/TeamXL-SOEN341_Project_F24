<% if (!ajax) { %>
  <%- include('partials/header', { title: 'Log In' }) %>
  <div class="overlay"></div>
<% } %>

<style>
  /* Background and overlay */
  body {
    background-image: url('/uploads/home.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: white;
    transition: opacity 0.3s ease-out;
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 1;
  }

  /* Centered Form Content */
  .form-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
  }

  .form-box {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    max-width: 400px;
    width: 100%;
    color: #333;
  }

  .form-box h2 {
    color: #333;
  }

  /* Fade-out effect for smooth transition */
  .fade-out {
    opacity: 0;
    transition: opacity 0.5s ease-out;
  }
</style>

<div id="content-container" class="form-content">
  <div class="form-box">
    <h2 class="h4 text-center mb-4">Welcome back, please log in</h2>
    <form action="/login" method="POST">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="username" placeholder="Username" required>
        <label for="floatingInput">Username</label>
      </div>

      <div class="form-floating mb-4">
        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
      </div>

      <button type="submit" class="btn btn-primary w-100 py-2">Log In</button>
    </form>
    <p class="mt-3">
      Donâ€™t have an account? <a href="/register" class="text-decoration-none smooth-transition">Register</a>
    </p>
  </div>
</div>

<% if (!ajax) { %>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      document.body.style.opacity = "1"; // Fade-in effect for full page load
    });
  </script>
  <%- include('partials/footer') %>
<% } %>
