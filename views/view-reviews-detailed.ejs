<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Reviews - Detailed</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include Bootstrap Icons (optional) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

<div class="container py-4">
  <!-- Dashboard Component -->
  <div class="mb-5">
    <h2 class="text-primary mb-4"><i class="bi bi-bar-chart-fill me-2"></i>Assessment Dashboard</h2>
    <div class="row g-4">
      <!-- Cooperation Score Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm border-0 h-100">
          <div class="card-body">
            <h5 class="card-title">Cooperation</h5>
            <p class="display-6 text-success"><!-- Placeholder for dynamic data -->88%</p>
            <div class="progress mt-2">
              <div class="progress-bar bg-success" role="progressbar" style="width: 88%" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Conceptual Score Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm border-0 h-100">
          <div class="card-body">
            <h5 class="card-title">Conceptual</h5>
            <p class="display-6 text-info"><!-- Placeholder for dynamic data -->75%</p>
            <div class="progress mt-2">
              <div class="progress-bar bg-info" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Practical Score Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm border-0 h-100">
          <div class="card-body">
            <h5 class="card-title">Practical</h5>
            <p class="display-6 text-warning"><!-- Placeholder for dynamic data -->82%</p>
            <div class="progress mt-2">
              <div class="progress-bar bg-warning" role="progressbar" style="width: 82%" aria-valuenow="82" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Work Ethic Score Card -->
      <div class="col-md-3">
        <div class="card text-center shadow-sm border-0 h-100">
          <div class="card-body">
            <h5 class="card-title">Work Ethic</h5>
            <p class="display-6 text-primary"><!-- Placeholder for dynamic data -->90%</p>
            <div class="progress mt-2">
              <div class="progress-bar bg-primary" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% for(var i = 0, j = 0, k = -1; i < student_info.length; i++) { %>
    <% if(i + 1 < student_info.length && i > 0 && student_info[i].id == student_info[i - 1].id) { i++; } %>
    <% if(k != j) { k++; %>
      <!-- Team Header -->
      <div class="mb-4">
        <h3 class="text-primary border-bottom pb-2">
          <i class="bi bi-people-fill me-2"></i> Team Name: <%= groups[j].group_name %>
        </h3>
      </div>

      <!-- Reviews Table -->
      <div class="table-responsive mb-5">
        <table class="table table-bordered table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th scope="col">Member</th>
              <th scope="col">Cooperation</th>
              <th scope="col">Conceptual</th>
              <th scope="col">Practical</th>
              <th scope="col">Work Ethic</th>
              <th scope="col">Average Score</th>
            </tr>
          </thead>
          <tbody>
    <% } %>
    <% if(groups[j].id_group != student_info[i].id_group) { j++; i--; %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <tr>
        <td><%= student_info[i].id %></td>
        <td><%- getCooperation(student_info, i) %></td>
        <td><%- getConceptual(student_info, i) %></td>
        <td><%- getPractical(student_info, i) %></td>
        <td><%- getWorkEthic(student_info, i) %></td>
        <td><%- getAverage(student_info, i) %></td>
      </tr>
    <% } %>
  <% } %>
</div>

<!-- Include Bootstrap JS (Optional, for tooltips, popovers, etc.) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
