<%- include('partials/student-header', { title: 'Profile', headerTitle: 'Profile' }) %>

<div class="container m-5" style="width:50%">
  <h4 class="mb-3">Profile</h4>
  
  <div class="row g-3">

    <!-- First Name -->
    <div class="col-sm-6">
      <label for="firstName" class="form-label">First name</label>
      <p class="form-control-plaintext"><%= profile?.first_name || 'N/A' %></p>
    </div>

    <!-- Last Name -->
    <div class="col-sm-6">
      <label for="lastName" class="form-label">Last name</label>
      <p class="form-control-plaintext"><%= profile?.last_name || 'N/A' %></p>
    </div>

    <!-- Email -->
    <div class="col-12">
      <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
      <p class="form-control-plaintext"><%= profile?.email || 'N/A' %></p>
    </div>

    <!-- Address -->
    <div class="col-12">
      <label for="address" class="form-label">Address</label>
      <p class="form-control-plaintext"><%= profile?.address || 'N/A' %></p>
    </div>

    <!-- Address 2 -->
    <div class="col-12">
      <label for="address2" class="form-label">Address 2 <span class="text-muted">(Optional)</span></label>
      <p class="form-control-plaintext"><%= profile?.address2 || 'N/A' %></p>
    </div>

    <!-- Country -->
    <div class="col-md-5">
      <label for="country" class="form-label">Country</label>
      <p class="form-control-plaintext">Canada</p>
    </div>

    <!-- Province -->
    <div class="col-md-3">
      <label for="province" class="form-label">Province</label>
      <p class="form-control-plaintext"><%= profile?.province || 'N/A' %></p>
    </div>

    <!-- Zip Code -->
    <div class="col-md-4">
      <label for="zip" class="form-label">Zip</label>
      <p class="form-control-plaintext"><%= profile?.zip || 'N/A' %></p>
    </div>

  </div>

</div>

<%- include('partials/footer') %>
